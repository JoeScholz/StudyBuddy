<title>Profile</title>
<div id="mainContainer">
  <div class="headerWrap">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">SB</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="/members/{{#if data}}{{#each data}}{{UserId}}{{/each}}{{/if}}">Profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link"
              href="/resources?userId={{#if data}}{{#each data}}{{UserId}}{{/each}}{{/if}}">Resources</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" target="_blank" href="https://mysterious-river-33772.herokuapp.com/">Chat</a>
          </li>
          {{!-- <li class="nav-item">
            <a class="nav-link"
              href="/video.html?userId={{#if data}}{{#each data}}{{UserId}}{{/each}}{{/if}}">VidChat</a>
          </li> --}}
        </ul>
      </div>
    </nav>
  </div>
   <div class="jumbotron jumbotron-fluid" id="jumbotron">
        <div class="container">
            <h1 class="display-4">STUDY BUDDY</h1>
        </div>
    </div>

  {{!-- if survey show results --}}
  {{#unless data}}
  <div class="container--blog">
    <div class="row">
      <div class="col-md-12 blog-container">

        <div id="survey-form" class="row">
          <div class="col-8 offset-2">
            <div class="card mt-4">
              <div class="card-body">

                <h5 class="card-title"></h5>
                <form id="cms">
                  <h1>Survey Questions</h1>
                  <hr>
                  <br>
                  <div class="input-field col s6">
                    <h5>Name (Required)</h5>
                    <input type="text" class="form-control" id="name" required>
                  </div>
                  <br>
                  <div class="input-field col s6">
                    <h5>Email (Required)</h5>
                    <input type="text" class="form-control" id="email" required>
                  </div>
                  <br>

                  <div class="input-field col s12">
                    <h5>HTML Expertise Level</h5>
                    <select class="chosen-select" id="question1" aria-placeholder="Select an Option">
                      <option value></option>
                      <option value="1">1 (Novice)</option>
                      <option value="2">2</option>
                      <option value="3">3</option>
                      <option value="4">4</option>
                      <option value="5">5 (Expert)</option>
                    </select>

                  </div>
                  <div class="input-field col s12">
                    <h5>CSS Expertise Level</h5>
                    <select class="chosen-select" id="question2" aria-placeholder="Select an Option">
                      <option value></option>
                      <option value="1">1 (Novice)</option>
                      <option value="2">2</option>
                      <option value="3">3</option>
                      <option value="4">4</option>
                      <option value="5">5 (Expert)</option>
                    </select>

                  </div>
                  <div class="input-field col s12">
                    <h5>JavaScript Expertise Level</h5>
                    <select class="chosen-select" id="question3" aria-placeholder="Select an Option">
                      <option value></option>
                      <option value="1">1 (Novice)</option>
                      <option value="2">2</option>
                      <option value="3">3</option>
                      <option value="4">4</option>
                      <option value="5">5 (Expert)</option>
                    </select>
                  </div>
                  <button type="submit" id="survey-submit" class="btn btn-success submit">Submit</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


{{/unless}}
<div class="container--results">
  <div class="row">
    <div class="col-md-12">
      <table id="results">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>HTML Expertise</th>
          <th>CSS Expertise</th>
          <th>JavaScript Expertise</th>
          <th></th>
          <th></th>
        </tr>
        {{#if data}}
        {{#each data}}
        <tr>
          <td>{{name}}</td>
          <td>{{email}}</td>
          <td>{{html}}</td>
          <td>{{css}}</td>
          <td>{{javascript}}</td>
          <td>{{matchUser}}</td>
          <td>{{matchEmail}}</td>
        </tr>
        {{/each}}
        {{/if}}
      </table>
    </div>
  </div>
</div>
<div class="container--match">
  <div class="row">
    <div class="col-md-12">
      {{#if match}}
      {{#each match}}
      <h3 class="match">Your Study Buddy</h3>
      <h4 class="match-details">Name: {{name}}</h4>
      <h4 class="match-details">Email: {{email}}</h4>
      {{/each}}
      {{/if}}
    </div>
  </div>
</div>

<script src="/js/members.js" type="text/javascript"></script>